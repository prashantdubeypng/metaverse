# WebSocket Server Configuration
WS_PORT=3001

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/metaverse"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
# For Redis with authentication:
# REDIS_URL="redis://username:password@localhost:6379"

# Kafka Configuration
KAFKA_BROKER="localhost:9092"

# Kafka SSL Configuration (for production/cloud)
# KAFKA_SSL_CA="/path/to/ca-cert.pem"
# KAFKA_SSL_CERT="/path/to/client-cert.pem"
# KAFKA_SSL_KEY="/path/to/client-key.pem"
# KAFKA_SSL_REJECT_UNAUTHORIZED="true"

# Kafka SASL Authentication (for cloud providers like Confluent, AWS MSK)
# KAFKA_USERNAME="your-kafka-username"
# KAFKA_PASSWORD="your-kafka-password"
# KAFKA_SASL_MECHANISM="plain"  # or "scram-sha-256", "scram-sha-512"

# Service ID (for multiple instances)
SERVICE_ID="ws-service-1"